{% extends 'base.html.twig' %}

{% block title "Gestion des Repas" %}
{% block loguer %} {{app.user.nom}}  {{app.user.prenom}} {% endblock %}

{% block body %}
<h1 class="header mt-4" style="text-align: center;">Gestion des repas</h1>

<div class="container mt-6">
		{% for message in app.flashes('success') %}
		<div class=" alert alert-success">
			{{message}}
		</div>
		{% endfor %}
		<div class="card">
			<div class="card-header">
				<div class="text-right">
					 <a class="btn btn-primary" href="{{path('admin.repas.new')}}"> Ajouter  </a>
				</div>
			</div>
		<br>
		<div class="card-body">
			  <div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
		            <thead>
						<tr>
							<th>Type de repas</th>
							<th>Heures du repas</th>
							<th>Prix du repas</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for repa in repas %}
							<tr>
								<td> {{repa.type}} </td>
								<td> {{repa.heure}} H </td>
								<td> {{repa.prix}} </td>
								<td>
									<a href=" {{path('admin.repas.edit',{id:repa.id})}} "><i class="fas fa-fw fa-user-edit"></i></a>
									<a href=" {{path('admin.repas.delete',{id:repa.id}) }}" onclick="return confirm('Voulez vous vraiment continuer??')"><i class="fas fa-fw fa-trash"></i></a>
									
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
		   </div>
	</div>

	</div>
	
	
{% endblock %}