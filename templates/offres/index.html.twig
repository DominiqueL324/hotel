{% extends 'base.html.twig' %}

{% block title "Offre-Acceuil" %}
{% block loguer %} {{app.user.nom}}  {{app.user.prenom}} {% endblock %}

{% block body %}
<h1 class="header mt-4" style="text-align: center;">Gestion des Offres</h1>
<div class="container mt-6">
		{% for message in app.flashes('success') %}
		<div class=" alert alert-success">
			{{message}}
		</div>
		{% endfor %}
		<br>
		<div class="card">
		<div class="card-header">
			<div class="text-right">
				 <a class="btn btn-primary" href="{{path('admin.offre.new')}}"> Ajouter  </a>
				 <a class="btn btn-primary" href="{{path('admin.offre.etat')}}"> Etat des offres</a>
			</div>
		</div>
		<br>
	<div class="card-body">
	 <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
	                    <th>Libellé</th>
						<th>Quantité</th>
						<th>Prix</th>
						<th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    	{% for offre in offres %}
					<tr>
						<td> {{offre.libelle}} </td>
						<td> {{offre.quantite}} </td> 
						<td> {{offre.prix}} </td>
						<td>
							<a href=" {{path('admin.offre.edit',{id:offre.id})}} "><i class="fas fa-fw fa-user-edit"></i></a>
							<a href=" {{path('admin.offre.delete',{id:offre.id}) }}" onclick="return confirm('Voulez vous vraiment continuer??')"><i class="fas fa-fw fa-trash"></i></a>
						</td>
					</tr>
				{% endfor %}
                  </tbody>
                </table>
            	</div>
            </div>
        </div>
		

	</div>
{% endblock %}