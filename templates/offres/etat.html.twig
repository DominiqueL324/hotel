{% extends 'base.html.twig' %}

{% block title "Offre-Etat" %}
{% block loguer %} {{app.user.nom}}  {{app.user.prenom}} {% endblock %}

{% block body %}
<div class="container mt-6">
		{% for message in app.flashes('success') %}
		<div class=" alert alert-success">
			{{message}}
		</div>
		{% endfor %}
	<div class="card">
		<div class="card-header">
			<h3 class="header" style="text-align: center;">Offres Libres</h3>
		</div>
	<div class="card-body">
	 <div class="table-responsive" id="libre">
	 	
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
	                    <th>Libell√©</th>
						<th>Disponible</th>
						<th>Prix</th>
						<th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    	{% for offre in offres %}
							<tr>
								<td> {{offre.libelle}} </td>
								<td> {{offre.quantite}} </td>
								<td> {{offre.prix}} </td>
								<td>
									<a href=" {{path('admin.offre.edit',{id:offre.id})}} "><i class="fas fa-fw fa-user-edit"></i></a>
									<a href=" {{path('admin.offre.delete',{id:offre.id}) }}" onclick="return confirm('Voulez vous vraiment continuer??')"><i class="fas fa-fw fa-trash"></i></a>
								</td>
							</tr>
						{% endfor %}
                  </tbody>
                </table>
            </div>
            </div>
        </div>
</div>
{% endblock %}
       