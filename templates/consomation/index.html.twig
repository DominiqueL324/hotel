{% extends 'base.html.twig' %}

{% block title "Gestion des consomations" %}
{% block loguer %} {{app.user.nom}}  {{app.user.prenom}} {% endblock %}

{% block body %}
<h1 class="header mt-4" style="text-align: center;">Gestion des consomations</h1>

<div class="container mt-6">
		{% for message in app.flashes('success') %}
		<div class=" alert alert-success">
			{{message}}
		</div>
		{% endfor %}
		<div class="card">
			<div class="card-header">
				<div class="row">
					<div class="col-lg-8">
						
					</div>
					<div class="col-lg-2">
						<a class="btn btn-primary" href="{{path('recep.consomation.etape1')}}"> Ajouter  </a>
					</div>
					<div class="col-lg-2">
					 <a class="btn btn-success" href="{{path('admin.consomation.inventaire')}}"> Inventaires  </a>
					</div>
				</div>
				
			</div>
		<br>
		<div class="card-body">
			  <div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
		            <thead>
						<tr>
							<th>Quantité</th>
							<th>Cout Total </th>
							<th>Client</th>
							<th>Détails</th>
						</tr>
					</thead>
					<tbody>
						{% for consomation in consomations %}
							<tr>
								<td> {{consomation.quantite}} </td>
								<td> {{consomation.cout}} </td>
								<td> {{consomation.client.nom}} {{consomation.client.prenom}} </td>
								<td>
									<a href=" {{path('recep.consomation.editLauncher',{id:consomation.id})}} "><i class="fas fa-fw fa-user-edit"></i></a>
									<a href=" {{path('recep.consomation.delete',{id:consomation.id}) }}" onclick="return confirm('Voulez vous vraiment continuer??')"><i class="fas fa-fw fa-trash"></i></a>
									<a href="{{path('recep.consomation.consult',{id:consomation.id})}}">
								          <i class="fas fa-fw fa-address-card"></i>
								          <span></span>
								        </a>
									
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
		   </div>
	</div>

	</div>
	
	
{% endblock %}