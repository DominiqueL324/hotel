{% extends 'base.html.twig' %}

{% block title "Utilsateur-index" %}
{% block loguer %} {{app.user.nom}}  {{app.user.prenom}} {% endblock %}

{% block body %}
<h1 class="header mt-4" style="text-align: center;">Gestion des Utilisateurs</h1>

<div class="container mt-6">
		{% for message in app.flashes('success') %}
		<div class=" alert alert-success">
			{{message}}
		</div>
		{% endfor %}
		<div class="card">
			<div class="card-header">
				<div class="text-right">
					 <a class="btn btn-primary" href="{{path('admin.user.new')}}"> Ajouter  </a>
				</div>
			</div>
		<br>
		<div class="card-body">
			  <div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
		            <thead>
						<tr>
							<th>Nom</th>
							<th>Prenom</th>
							<th>Matricule</th>
							<th>CNI</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td> {{user.nom}} </td>
								<td> {{user.prenom}} </td>
								<td> {{user.matricule}} </td>
								<td> {{user.cni}} </td>
								<td>
									<a href=" {{path('admin.user.edit',{id:user.id})}} "><i class="fas fa-fw fa-user-edit"></i></a>
									<a href=" {{path('admin.user.delete',{id:user.id}) }}" onclick="return confirm('Voulez vous vraiment continuer??')"><i class="fas fa-fw fa-trash"></i></a>
									
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
		   </div>
	</div>

	</div>
	
	
{% endblock %}