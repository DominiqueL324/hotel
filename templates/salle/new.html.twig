{% extends 'base.html.twig' %}
{% block title "Enregistrement de salle" %}
{% block loguer %} {{app.user.nom}}  {{app.user.prenom}} {% endblock %}
{% block body %}

	<div class="container mt-4">
		<div class="card" style="padding-left: 2; padding-right: 2;padding-bottom: 2">
			<div class="card-header">
				    <center><h2>Ajouter une Salle</h2></center>
			</div>
			<div class="card-body">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-3" > {{ form_row(form.type_salle) }} </div>
					<div class="col-md-3"> {{ form_row(form.places) }} </div>
					<div class="col-md-3"> {{ form_row(form.prix) }} </div>
					<div class="col-md-3"> {{ form_row(form.caution) }} </div>
				</div>
				<div class="row">
				<button class="btn btn-primary"> Enregistrer </button> 
				{{ form_end(form) }}
				<a href=" {{path('home')}} " class="btn btn-danger">Annuler</a>
				</div>
		</div>
		
	</div>
{% endblock %}