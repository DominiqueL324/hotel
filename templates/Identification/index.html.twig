{% extends 'base.html.twig' %}

{% block title "Identification-index" %}

{% block body %}
<h1 class="header mt-4" style="text-align: center;">Liste des Identifications</h1>
<div class=" mt-6">
		{% for message in app.flashes('success') %}
		<div class=" alert alert-success">
			{{message}}
		</div>
		{% endfor %}
		
		{% for message in app.flashes('erreur') %}
		<div class=" alert alert-danger">
			{{message}}
		</div>
		{% endfor %}
		<br>
		<div class="card">
		<div class="card-header">
			<div class="row">
				<div class="col-lg-3">
					 <a class="btn btn-primary" href=" {{path('recep.identification.etape1')}} "> Indentifier une reservation  </a>
				</div>
				<div class="text-right">
					 <a class="btn btn-success" href=" {{path('recep.noreservationidentification.etape1')}} ">Nouvelle identification</a>
				</div>

			</div>
			
		</div>
		<br>
		<div class="card-body">
		 <div class="table-responsive">
	                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
	                  <thead>
	                    <tr>
		                    <th>Informations Client</th>
							<th>Libellé</th>
							<th>Nombre</th>
							<th>Date arrivée</th>
							<th>Date départ</th>
							<th>Date Identification</th>
							<th>Avance</th>
							<th>Facturer</th>
	                    </tr>
	                  </thead>
	                  <tbody>
	                    	{% for identification in identifications %}
								<tr>
									<td> {{identification.reservation.client.nom}} {{ identification.reservation.client.prenom}} </td>
									<td> {{identification.reservation.offre.libelle}} </td>
									<td> {{identification.nombrepersonne}} personne(s) </td>
									<td> {{identification.arrivedat|date("d/m/Y") }} </td>
									<td> {{identification.livedat|date("d/m/Y") }} </td>
									<td> {{identification.madeat|date("d/m/Y") }} </td>
									<td>
										<a href=" # ">consulter</a>
									</td>
									<td>
										<a href=" # ">consulter</a>
									</td>
								</tr>
								
							{% endfor %}
	                  </tbody>
	                </table>
	            	</div>
					
	            </div>
        </div>
		

	</div>
{% endblock %}
