									<td> {{identification.reservation.offre.libelle}} </td>
									<td> {{identification.nombrepersonne}} </td>
									<td> {{identification.arrivedat|date("d/m/Y") }} </td>
									<td> {{identification.livedat("d/m/Y") }} </td>
									<td> {{identification.madeat("d/m/Y") }} </td>
									<td>
										<a href=" # ">consulter</a>
									</td>
								</tr>
								
							{% endfor %}
	                  </tbody>
	                </table>
	            	</div>
					
	            </div>
        </div>
		

	</div>
