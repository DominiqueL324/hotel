{% extends 'base.html.twig' %}

{% block title "Identification 1" %}
{% block loguer %} {{app.user.nom}}  {{app.user.prenom}} {% endblock %}

{% block body %}
<div class="container mt-6">
		{% for message in app.flashes('success') %}
		<div class=" alert alert-success">
			{{message}}
		</div>
		{% endfor %}
		<br>
		<div class="card">
		<div class="card-header">
			<div class="row">
						<h2>Selectionnez la Reservation a confirmer</h2>
						<div class="col-lg-2">
						
						</div>
						<div class="col-lg-3">
								<a href="#" class="btn btn-primary btn-icon-split">
				                    <span class="icon text-white-50">
				                      <i class="fas fa-flag"></i>
				                    </span>
				                    <span class="text">Etape 1</span>
				                </a>
						</div>
		 	</div>
		</div>
		<br>
	<div class="card-body">
	 <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
	                    <th>Nom</th>
						<th>Prenom</th>
						<th>Libell√©</th>
						<th>Porte</th>
						<th>Date debut</th>
						<th>Date fin</th>
						<th>Prix</th>
						<th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    	{% for reservation in reservations %}
							<tr>
								<td> {{reservation.client.nom}} </td>
								<td> {{reservation.client.prenom}} </td>
								<td> {{reservation.offre.libelle}} </td>
								<td> {{reservation.offre.porte}} </td>
								<td> {{reservation.beginat|date("d/m/Y") }} </td>
								<td> {{reservation.endat|date("d/m/Y") }} </td>
								<td> {{reservation.prix}} </td>
								<td>
									<a href=" {{path('recep.identification.etape2',{id:reservation.id})}} "><i class="fas fa-check"></i></a>
								</td>
							</tr>
						{% endfor %}
                  </tbody>
                </table>
            	</div>
            </div>
        </div>
	</div>
{% endblock %}